{# templates/spider.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Spider Market Home</title>
        {% block stylesheets %}
        <link href="{{ 'css/bootstrap.css' }}" type="text/css" rel="stylesheet" />
      {% endblock %}

    </head>

    <body>
    <header>
        <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
  

   <a class="navbar-brand"  href="/spider">Spider Market <img src="https://d30y9cdsu7xlg0.cloudfront.net/png/77640-200.png" alt="MDN" height="20%" width="20%"> </a>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/spider">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/spider/add">Add <span class="sr-only">(current)</span></a>
      </li>
    </ul>
  </div>
  
</nav>
</header>
<ul id="navigation">
<div class="row ">
            {% for spider in spiders %}
                <div class="col-lg-4 col-md-6 mb-4 text-center">
      <div class="card h-100">
        <div class="card-body">
          <a href="/spider/{{ spider.id }}">
          {% set break = false %}
          {% for breed in breeds if not break %}
            {% if breed.name == spider.name %}
              <img src="{{ breed.image }}" alt="MDN" height="300" width="300">
        {% set break = true %}  
            {% endif %}
          {% endfor %}
                    <h4 class="card-title">{{ spider.name }}</h4></a>
          <h5>{{ spider.price }}â‚¬</h5>
          <div class="card-footer">
          <a href="/spider/update/{{ spider.id }}" class="btn btn-primary">Update</a>
           <a href="/spider/remove/{{ spider.id }}" class="btn btn-primary">Remove</a>
            
          </div>
        </div>
      </div>
    </div>
            {% endfor %}
            </div>
    </body>
</html>